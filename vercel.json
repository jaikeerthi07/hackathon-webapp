{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "server/views/**",
                    "server/public/**"
                ]
            }
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/index.js"
        },
        {
            "src": "/",
            "dest": "/server/index.js"
        },
        {
            "src": "/login",
            "dest": "/server/index.js"
        },
        {
            "src": "/select-patient",
            "dest": "/server/index.js"
        },
        {
            "src": "/dashboard",
            "dest": "/server/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}