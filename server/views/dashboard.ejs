<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MediGlove â€“ Dashboard</title>

    <!-- Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/xlsx/dist/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #4F46E5;
            --success: #10B981;
            --warning: #F59E0B;
            --danger: #EF4444;
            --bg: #F3F4F6;
            --card-bg: rgba(255, 255, 255, 0.8);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f0fdf4 0%, #dbeafe 100%);
            margin: 0;
            padding: 20px;
            color: #1F2937;
            min-height: 100vh;
        }

        .glass-container {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            padding: 24px;
            max-width: 1400px;
            margin: auto;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.6);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            padding-bottom: 20px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }

        h1 {
            margin: 0;
            color: var(--primary);
            font-size: 1.5rem;
        }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 24px;
        }

        .metric-card {
            background: rgba(255, 255, 255, 0.5);
            padding: 20px;
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.6);
        }

        /* Tables */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th {
            text-align: left;
            padding: 12px;
            color: #6B7280;
            font-size: 0.875rem;
            font-weight: 500;
        }

        td {
            padding: 12px;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }

        /* Badges */
        .badge {
            padding: 4px 10px;
            border-radius: 99px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .badge.low {
            background: #D1FAE5;
            color: #065F46;
        }

        .badge.medium {
            background: #FEF3C7;
            color: #92400E;
        }

        .badge.high {
            background: #FEE2E2;
            color: #991B1B;
        }

        /* Arrows */
        .arrow-up {
            color: var(--danger);
        }

        .arrow-down {
            color: var(--success);
        }

        /* Typically down is good for HR/Temp, logic handles this */
        .arrow-stable {
            color: #9CA3AF;
        }

        /* Controls */
        .controls {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        button {
            background: var(--primary);
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: opacity 0.2s;
        }

        button:hover {
            opacity: 0.9;
        }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--primary);
            color: var(--primary);
        }

        textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #E5E7EB;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.8);
            box-sizing: border-box;
        }
    </style>
</head>

<body>
    <div class="glass-container" id="reportArea">
        <div class="header">
            <div>
                <h1>MediGlove Physician Dashboard</h1>
                <div style="font-size: 0.9rem; color: #4b5563; margin-top: 4px;">
                    Patient: <strong>
                        <%= patient.name %>
                    </strong> (<%= patient.mrn %>) |
                        Ward: <strong>
                            <%= patient.ward || 'N/A' %>
                        </strong> |
                        Room: <strong>
                            <%= patient.room || 'N/A' %>
                        </strong>
                </div>
            </div>
            <div class="controls">
                <a href="/select-patient" class="btn-outline"
                    style="text-decoration:none; padding: 8px 16px; border-radius: 8px;">Change Patient</a>
                <a href="/" class="btn-outline"
                    style="text-decoration:none; padding: 8px 16px; border-radius: 8px; border-color:#EF4444; color:#EF4444;">Logout</a>
            </div>
        </div>

        <div class="card-grid">
            <!-- Vitals Table -->
            <div class="metric-card">
                <h3 style="margin-top:0">Current Vitals</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Metric</th>
                            <th>Value</th>
                            <th>Trend</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Heart Rate</td>
                            <td id="hrVal">--</td>
                            <td id="hrTrend">--</td>
                            <td id="hrFlag">--</td>
                        </tr>
                        <tr>
                            <td>SpOâ‚‚</td>
                            <td id="spo2Val">--</td>
                            <td id="spo2Trend">--</td>
                            <td id="spo2Flag">--</td>
                        </tr>
                        <tr>
                            <td>Temp</td>
                            <td id="tempVal">--</td>
                            <td id="tempTrend">--</td>
                            <td id="tempFlag">--</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- NEWS Score -->
            <div class="metric-card">
                <h3 style="margin-top:0">NEWS Score Analysis</h3>
                <div style="display:flex; justify-content:space-between; align-items:center;">
                    <div style="text-align:center;">
                        <span style="font-size: 3rem; font-weight:700; color:var(--primary)" id="newsTotal">0</span>
                        <div style="font-size:0.875rem; color:#6B7280">Total Score</div>
                    </div>
                    <div style="text-align:right;">
                        <span id="riskBadge" class="badge low" style="font-size:1rem; padding: 6px 12px;">LOW
                            RISK</span>
                        <div id="icuBadge" class="badge high" style="display:none; margin-top:8px;">ICU ESCALATION</div>
                    </div>
                </div>
                <table style="margin-top:12px;">
                    <tr>
                        <td>HR Score</td>
                        <td id="newsHR">0</td>
                    </tr>
                    <tr>
                        <td>SpOâ‚‚ Score</td>
                        <td id="newsSpO2">0</td>
                    </tr>
                    <tr>
                        <td>Temp Score</td>
                        <td id="newsTemp">0</td>
                    </tr>
                </table>
            </div>
        </div>

        <!-- Chart -->
        <div class="metric-card" style="margin-bottom: 24px;">
            <h3 style="margin-top:0">24-Hour Trends</h3>
            <canvas id="vitalsChart" style="max-height: 300px;"></canvas>
        </div>

        <!-- Interpretation & Actions -->
        <div class="card-grid">
            <div class="metric-card">
                <h3 style="margin-top:0">Clinical Interpretation</h3>
                <p id="interpretation" style="font-size:1.1rem; line-height:1.6; color:#374151;">Loading analysis...</p>
            </div>
            <div class="metric-card">
                <h3 style="margin-top:0">Upload & Actions</h3>
                <div style="margin-bottom:12px;">
                    <label style="display:block; margin-bottom:8px; font-size:0.875rem; font-weight:500;">Batch Data
                        Upload (Excel)</label>
                    <!-- Hidden File Input -->
                    <input type="file" id="excelFile" accept=".xlsx" style="display:none;"
                        onchange="handleFileSelect()">

                    <!-- Custom Controls -->
                    <div style="display:flex; gap:10px; align-items:center;">
                        <button onclick="document.getElementById('excelFile').click()" class="btn-outline"
                            style="border: 2px dashed #ccc; padding: 10px; color: #555;">
                            ðŸ“‚ Choose Excel File
                        </button>
                        <span id="fileName" style="font-size:0.875rem; color:#6B7280;">No file chosen</span>
                    </div>

                    <button id="uploadBtn" onclick="uploadData()"
                        style="margin-top:12px; display:none; width:100%; background:var(--primary);">
                        ðŸš€ Upload Data
                    </button>

                    <p id="uploadStatus" style="font-size:0.875rem; margin-top:4px; color:#6B7280;"></p>
                </div>
                <hr style="border:0; border-top:1px solid #eee; margin:16px 0;">
                <textarea rows="3" placeholder="Add clinical notes..."></textarea>
                <div style="margin-top:12px;">
                    <button onclick="exportPDF()" class="btn-outline"
                        style="background:var(--primary); color:white; border:none;">Download PDF Report</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Client-side Logic (Ported from previous HTML) -->
    <script>
        const API_URL = 'http://localhost:3000/api';
        const patientId = <%= patient.id %>;
        let chart = null;

        // Fetch Data
        async function fetchDashboard() {
            try {
                const res = await fetch(`${API_URL}/patient/${patientId}/dashboard`);
                const data = await res.json();
                if (data.error) return console.error(data.error);

                updateDOM(data.latest, data.analysis);
                renderChart(data.history);
            } catch (err) { console.error(err); }
        }

        // Update DOM Elements
        function updateDOM(l, analysis) {
            if (!l) return;

            // Values
            document.getElementById('hrVal').innerText = l.heart_rate;
            document.getElementById('spo2Val').innerText = l.spo2;
            document.getElementById('tempVal').innerText = l.temperature;

            // Trends
            const t = analysis.trends;
            document.getElementById('hrTrend').innerHTML = getArrow(t.hr);
            document.getElementById('spo2Trend').innerHTML = getArrow(t.spo2);
            document.getElementById('tempTrend').innerHTML = getArrow(t.temp);

            // Flags
            document.getElementById('hrFlag').innerHTML = getFlag(l.heart_rate, 'HR');
            document.getElementById('spo2Flag').innerHTML = getFlag(l.spo2, 'SPO2');
            document.getElementById('tempFlag').innerHTML = getFlag(l.temperature, 'TEMP');

            // NEWS
            document.getElementById('newsTotal').innerText = analysis.newsScore;
            // (Simplified score breakdown visualization for demo)

            // Risk Badge
            const badge = document.getElementById('riskBadge');
            const icu = document.getElementById('icuBadge');
            if (analysis.newsScore >= 7) {
                badge.className = 'badge high'; badge.innerText = 'HIGH RISK'; icu.style.display = 'block';
            } else if (analysis.newsScore >= 5) {
                badge.className = 'badge medium'; badge.innerText = 'MEDIUM RISK'; icu.style.display = 'none';
            } else {
                badge.className = 'badge low'; badge.innerText = 'LOW RISK'; icu.style.display = 'none';
            }

            // Interpretation
            document.getElementById('interpretation').innerText = analysis.interpretation;
        }

        function getArrow(dir) {
            if (dir === 'UP') return '<span class="arrow-up">â†‘</span>';
            if (dir === 'DOWN') return '<span class="arrow-down">â†“</span>';
            return '<span class="arrow-stable">â†’</span>';
        }

        function getFlag(val, type) {
            // Simplified logic for demo
            if (type === 'HR' && (val > 100 || val < 50)) return '<span class="badge high">Abnormal</span>';
            if (type === 'SPO2' && val < 94) return '<span class="badge high">Low</span>';
            if (type === 'TEMP' && val > 38) return '<span class="badge high">High</span>';
            return '<span class="badge low">Normal</span>';
        }

        // Chart
        function renderChart(history) {
            // Server sends newest first. Chart needs oldest first.
            const data = [...history].reverse();
            const ctx = document.getElementById('vitalsChart').getContext('2d');

            if (chart) chart.destroy();

            chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.map(d => new Date(d.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })),
                    datasets: [
                        { label: 'Heart Rate', data: data.map(d => d.heart_rate), borderColor: '#EF4444', tension: 0.4 },
                        { label: 'SpO2', data: data.map(d => d.spo2), borderColor: '#3B82F6', tension: 0.4 },
                        { label: 'Temp', data: data.map(d => d.temperature), borderColor: '#F59E0B', tension: 0.4 }
                    ]
                },
                options: {
                    responsive: true,
                    interaction: { mode: 'index', intersect: false },
                    scales: { x: { display: false } },
                    plugins: { legend: { position: 'top' } }
                }
            });
        }

        // File Selection UI
        function handleFileSelect() {
            const file = document.getElementById('excelFile').files[0];
            if (file) {
                document.getElementById('fileName').innerText = file.name;
                document.getElementById('uploadBtn').style.display = 'block';
            }
        }

        // Upload
        async function uploadData() {
            const file = document.getElementById('excelFile').files[0];
            if (!file) return alert("Select a file first");

            const r = new FileReader();
            r.onload = async (e) => {
                const wb = XLSX.read(new Uint8Array(e.target.result), { type: 'array' });
                const data = XLSX.utils.sheet_to_json(wb.Sheets[wb.SheetNames[0]]);
                document.getElementById('uploadStatus').innerText = `Uploading ${data.length} records...`;

                await fetch(`${API_URL}/vitals/upload`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ patientId: 1, data })
                });

                document.getElementById('uploadStatus').innerText = "Upload Complete";
                fetchDashboard();
            };
            r.readAsArrayBuffer(file);
        }

        // Init
        fetchDashboard();
        setInterval(fetchDashboard, 5000);
    </script>
</body>

</html>