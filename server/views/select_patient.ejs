<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Patient - MediGlove</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f0fdf4 0%, #dbeafe 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 20px;
        }

        .container {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(20px);
            padding: 2rem;
            border-radius: 1.5rem;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.5);
            width: 100%;
            max-width: 600px;
        }

        h1 {
            color: #1f2937;
            text-align: center;
            margin-bottom: 2rem;
        }

        .filters {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        select,
        input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            background: white;
            font-size: 1rem;
            box-sizing: border-box;
        }

        .patient-list {
            display: grid;
            gap: 1rem;
            max-height: 300px;
            overflow-y: auto;
        }

        .patient-card {
            background: rgba(255, 255, 255, 0.6);
            padding: 1rem;
            border-radius: 0.75rem;
            border: 1px solid rgba(255, 255, 255, 0.8);
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .patient-card:hover {
            background: white;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }

        .patient-info strong {
            display: block;
            color: #1f2937;
            font-size: 1.1rem;
        }

        .patient-info span {
            color: #6b7280;
            font-size: 0.9rem;
        }

        .btn-select {
            background: #4F46E5;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            text-decoration: none;
            font-weight: 500;
        }
    </style>
</head>

<body>

    <div class="container">
        <h1>Patient Selection</h1>

        <div class="filters">
            <div>
                <label style="display:block; margin-bottom:0.5rem; font-weight:500;">Ward</label>
                <select id="wardSelect" onchange="searchPatients()">
                    <option value="">All Wards</option>
                </select>
            </div>
            <div>
                <label style="display:block; margin-bottom:0.5rem; font-weight:500;">Room</label>
                <input type="text" id="roomInput" placeholder="Room No" oninput="searchPatients()">
            </div>
        </div>

        <div id="patientList" class="patient-list">
            <!-- Populated by JS -->
            <div style="text-align:center; color:#6b7280; padding:2rem;">Loading patients...</div>
        </div>
    </div>

    <script>
        // Init
        fetchWards();
        searchPatients();

        async function fetchWards() {
            try {
                const res = await fetch('/api/wards');
                const wards = await res.json();
                const select = document.getElementById('wardSelect');
                wards.forEach(w => {
                    const opt = document.createElement('option');
                    opt.value = w;
                    opt.innerText = w;
                    select.appendChild(opt);
                });
            } catch (e) { console.error(e); }
        }

        async function searchPatients() {
            const ward = document.getElementById('wardSelect').value;
            const room = document.getElementById('roomInput').value;

            try {
                const res = await fetch(`/api/patients/search?ward=${ward}&room=${room}`);
                const patients = await res.json();
                renderPatients(patients);
            } catch (e) { console.error(e); }
        }

        function renderPatients(patients) {
            const list = document.getElementById('patientList');
            list.innerHTML = '';

            if (patients.length === 0) {
                list.innerHTML = '<div style="text-align:center; color:#6b7280; padding:2rem;">No patients found in this location.</div>';
                return;
            }

            patients.forEach(p => {
                const div = document.createElement('div');
                div.className = 'patient-card';
                div.innerHTML = `
                    <div class="patient-info">
                        <strong>${p.name}</strong>
                        <span>ID: ${p.mrn} | Age: ${p.age || 'N/A'} | ${p.gender || 'N/A'}</span>
                        <div style="margin-top:4px; font-size:0.85rem; color:#4F46E5;">
                            üìç Ward: ${p.ward || '-'} | Room: ${p.room || '-'}
                        </div>
                    </div>
                    <a href="/dashboard?id=${p.id}" class="btn-select">Monitor ‚Üí</a>
                `;
                list.appendChild(div);
            });
        }
    </script>
</body>

</html>